<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>

            <gradient
                android:startColor="@color/progressBarBackgroundColor"
                android:centerColor="@color/progressBarBackgroundColor"
                android:endColor="@color/progressBarBackgroundColor"
                />
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient
                    android:startColor="@color/skyblue"
                    android:centerColor="@color/skyblue"
                    android:endColor="@color/skyblue"
                    />
            </shape>
        </clip>
    </item>

</layer-list>