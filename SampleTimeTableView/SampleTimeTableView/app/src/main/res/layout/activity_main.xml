<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/monday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/tuesday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/wednesday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/thursday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/friday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/saturday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            ></RelativeLayout>
    </LinearLayout>
    <LinearLayout

        android:id="@+id/smainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/smonday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/stuesday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/swednesday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/sthursday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/sfriday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/ssaturday_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ></RelativeLayout>
    </LinearLayout>
    
</FrameLayout>
