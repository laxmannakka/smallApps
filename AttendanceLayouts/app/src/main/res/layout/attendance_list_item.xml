<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_20"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rounded_student_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_secret_user" />

    <TextView
        android:id="@+id/name"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/rounded_student_image"
        android:text="Jack Sparrow"
        android:textSize="18sp" />
<TextView
    android:id="@+id/roll_number"
    android:layout_width="wrap_content"
    android:layout_below="@+id/name"
    android:text="3453445"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:gravity="clip_vertical"
    android:layout_toRightOf="@+id/rounded_student_image"
    android:layout_height="wrap_content"/>
  <com.helper.CircularProgressBar
      android:id="@+id/circularProgressbar"
      android:layout_height="80dp"
      android:layout_width="80dp"
      android:layout_alignParentTop="true"
      android:layout_toLeftOf="@+id/imageView"
      android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:src="@drawable/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>